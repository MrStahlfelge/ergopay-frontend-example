<ui:UiBinder xmlns:g='urn:import:com.google.gwt.user.client.ui'
    xmlns:m='urn:import:gwt.material.design.client.ui'
    xmlns:m.html='urn:import:gwt.material.design.client.ui.html'
    xmlns:ui='urn:ui:com.google.gwt.uibinder'>

    <m:MaterialPanel>
        <m:MaterialPanel addStyleNames="valign-wrapper" height="100vh" textAlign="CENTER">

            <m:MaterialRow>
                <m:MaterialColumn grid="s12" padding="12" textAlign="CENTER">
                    <m:MaterialImage alt="logo"
                        url="https://gwtmaterialdesign.github.io/gmd-core-demo/launcher-icons/launcher1x.png" />
                    <m:MaterialLabel fontSize="2em" text="Welcome to ErgoPay Showcase" />
                    <m:MaterialLabel fontSize="1.5em"
                        text="Use panel on the left to choose the tool to use." />
                    <g:HTMLPanel>
                        <m.html:Span>You need an ErgoPay compatible Wallet Application at hand.
                        </m.html:Span>
                    </g:HTMLPanel>

                    <m:MaterialLink
                        href="https://www.reddit.com/r/ergonauts/comments/sc9lbk/nautilus_wallet_public_beta_test/hu9v6dk/"
                        text="What is ErgoPay? (non-dev explanation)" />
                </m:MaterialColumn>
            </m:MaterialRow>


        </m:MaterialPanel>
    </m:MaterialPanel>
</ui:UiBinder>
