<ui:UiBinder xmlns:g='urn:import:com.google.gwt.user.client.ui'
    xmlns:m='urn:import:gwt.material.design.client.ui'
    xmlns:m.html='urn:import:gwt.material.design.client.ui.html'
    xmlns:ui='urn:ui:com.google.gwt.uibinder'>

    <m:MaterialPanel>

        <m:MaterialPanel textAlign="CENTER">
            <m:MaterialRow>
                <m:MaterialColumn padding="12" textAlign="CENTER">
                    <m:MaterialLabel fontSize="2em" text="Mint a token" />
                    <m:MaterialLabel text="Fill the input fields to specify the token properties" />
                </m:MaterialColumn>
            </m:MaterialRow>
            <m:MaterialRow>
                <m:MaterialTextBox clearOnKeyUp="true" grid="s12 m10 l6" label="Token name"
                    offset="m1 l3" required="true" ui:field="tokenName" />
            </m:MaterialRow>
            <m:MaterialRow>
                <m:MaterialLongBox clearOnKeyUp="true" grid="s12 m5 l3" label="Number of token to issue"
                    offset="m1 l3" required="true" ui:field="tokenNum" />
                <m:MaterialIntegerBox grid="s12 m5 l3" label="Decimal places"
                    ui:field="tokenDecimals" />
            </m:MaterialRow>
            <m:MaterialRow>
                <m:MaterialButton backgroundColor="WHITE" enabled="false" margin="8"
                    text="Open wallet app" textColor="BLACK" waves="DEFAULT"
                    ui:field="mintTokenButton" />
                <m:MaterialLabel text="or scan with your mobile device:" />
                <m:MaterialColumn grid="s12" padding="12">
                    <g:HTMLPanel>
                        <m.html:Div height="200px" width="200px" ui:field="qrcode" />
                    </g:HTMLPanel>
                </m:MaterialColumn>
            </m:MaterialRow>
            <m:MaterialRow>
                <m:MaterialLabel fontSize="1.2em" text="What's shown here?" />
                <m:MaterialLabel grid="s12 m10 l6" offset="m1 l3" text="This example demonstrates a dynamic ErgoPay link.
                This site constructs a link holding the information you gave. Your wallet app uses this link
                to request the transaction data from the dApp backend, adding your p2pk address data.
                The wallet backend builds a transaction to mint the specified token, and you can confirm to sign it." />

            </m:MaterialRow>
        </m:MaterialPanel>
    </m:MaterialPanel>
</ui:UiBinder>
