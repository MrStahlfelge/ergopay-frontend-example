<ui:UiBinder xmlns:g='urn:import:com.google.gwt.user.client.ui'
    xmlns:m='urn:import:gwt.material.design.client.ui'
    xmlns:m.html='urn:import:gwt.material.design.client.ui.html'
    xmlns:ui='urn:ui:com.google.gwt.uibinder'>

    <m:MaterialPanel>

        <m:MaterialPanel addStyleNames="valign-wrapper" height="100vh" textAlign="CENTER">
            <m:MaterialRow>
                <m:MaterialColumn grid="s12" padding="12" textAlign="CENTER">
                    <m:MaterialLabel fontSize="2em" text="Mint a token" />
                    <m:MaterialLabel text="Fill the input fields to specify the token properties" />
                </m:MaterialColumn>
                <m:MaterialTextBox clearOnKeyUp="true" grid="s12" label="Token name" required="true"
                    ui:field="tokenName" />
                <m:MaterialLongBox clearOnKeyUp="true" grid="s6" label="Number of token to issue"
                    required="true" ui:field="tokenNum" />
                <m:MaterialIntegerBox grid="s6" label="Decimal places" ui:field="tokenDecimals" />
                <m:MaterialButton backgroundColor="WHITE" enabled="false" margin="8"
                    text="Open wallet app" textColor="BLACK" waves="DEFAULT"
                    ui:field="mintTokenButton" />
                <m:MaterialLabel text="or scan with your mobile device:" />
                <m:MaterialColumn grid="s12" padding="12">
                <g:HTMLPanel>
                    <m.html:Div height="200px" width="200px" ui:field="qrcode" />
                </g:HTMLPanel>
                </m:MaterialColumn>

            </m:MaterialRow>
        </m:MaterialPanel>
    </m:MaterialPanel>
</ui:UiBinder>
