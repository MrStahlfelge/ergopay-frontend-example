<ui:UiBinder xmlns:g='urn:import:com.google.gwt.user.client.ui'
    xmlns:m="urn:import:gwt.material.design.client.ui"
    xmlns:ui='urn:ui:com.google.gwt.uibinder'>

    <m:MaterialPanel>
        <m:MaterialHeader>
            <m:MaterialNavBar activates="sidenav" backgroundColor="INDIGO" ui:field="navBar">
                <m:MaterialNavBrand fontSize="1.2em" text="ErgoPay Showcase" />
                <m:MaterialNavSection float="RIGHT" hideOn="NONE" paddingRight="20">
                    <m:MaterialDarkModeToggle />
                </m:MaterialNavSection>
            </m:MaterialNavBar>
        </m:MaterialHeader>

        <m:MaterialSideNavPush width="280" m:id="sidenav">
            <m:MaterialLink href="#" text="Home" />
            <m:MaterialLink href="#mint-token" text="Mint a token" />
            <m:MaterialLink href="#burn-token" text="Burn a token" />
            <m:MaterialLink href="#spend-box" text="Spend a box" />
        </m:MaterialSideNavPush>

        <m:MaterialContainer paddingTop="64" ui:field="container" />

    </m:MaterialPanel>
</ui:UiBinder>